<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <style>
        body {
            background: url('https://images.unsplash.com/photo-1618556782763-ac991d2fdac8') center/cover fixed no-repeat;

            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            flex-direction: column;
            background-color: rgb(148, 132, 111);
        }

        .headerclass {
            display: flex;
            justify-content: space-between;
            border: 1px solid black;
            align-items: center;
            width: 95%;
            background-color: rgb(8, 118, 126);
    color: rgb(231, 222, 222);
    height: 150px;
        }

        #form {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 50%;
            height: 500px;
            background-color: rgba(34, 120, 160, 0.288);
            align-items: center;
            margin-top: 20px;
            padding: 20px;
            border-radius: 10px;
        }

        input {
            height: 40px;
            width: 95%;
            border: 1px solid black;
            border-radius: 5px;
            background-color: white;
            margin-bottom: 10px;
            padding: 5px;
            font-size: 16px;
        }

        #submitb, #backb {
            height: 60px;
            width: 95%;
            border: none;
            border-radius: 5px;
            background-color: rgb(0, 139, 253);
            color: white;
            cursor: pointer;
            font-size: 16px;
        }

        .divc {
            width: 100%;
            height: 60%;
            display: flex;
            align-items: center;
            flex-direction: column;
        }

        #message {
            font-size: 20px;
            margin-top: 10px;
            color: green;
        }
    </style>
</head>

<body>
    <div class="headerclass">
    <img src="https://images.unsplash.com/photo-1618556782763-ac991d2fdac8?crop=entropy&cs=tinysrgb&fit=crop&fm=jpg&h=100&ixid=MnwxfDB8MXxyYW5kb218MHx8bG9nb3x8fHx8fDE3MDY5MDU0NjQ&ixlib=rb-4.0.3&q=80&utm_campaign=api-credit&utm_medium=referral&utm_source=unsplash_source&w=100" alt="Logo" class="logo">

        <div>
            <%- include("header",{naem:name});%>
        </div>
        <div>
            <a href="/home"><button id="home" class="btn btn-primary">gotohome</button></a>

        </div>
        <div>
            <div><a href="/logout"><button class="btn btn-primary">logout</button></a></div>
        </div>
    </div>

    <div class="divc">
        <form id="form" enctype="multipart/form-data">
            <h1 style="margin-bottom: 20px; font-size: 24px;">ADD PRODUCTS</h1>
            <input type="text" name="name" placeholder="Product Name" required>
            <input type="text" name="description" placeholder="Product Description" required>
            <input type="number" min="0" name="price" placeholder="Product price" required>
            <input type="text" name="category" placeholder="Category" required>
            <input type="number" min="1" name="quantity" placeholder="Product Quantity" required>
            <input name="pic" id="pic" type="file" required>
            <input type="button" value="ADD PRODUCT" id="submitb">
        </form>
        <a href="/admincontrol"><button id="backb">BACK TO ADMIN CONTROL</button></a>
    </div>

    <div id="message"></div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>



    <script>
        let form = document.getElementById("form")
        let pic = document.getElementById("pic")
        let button = document.getElementById("submitb")
        let backb = document.getElementById("backb")
        
        button.addEventListener("click",function(){
            console.log(pic.files)
            let formdata = new FormData();
            formdata.append("pic",pic.files[0])
            formdata.append("name",form.elements[0].value)
            formdata.append("description",form.elements[1].value)
            formdata.append("price",form.elements[2].value)
            formdata.append("category",form.elements[3].value)
            formdata.append("quantity",form.elements[4].value)
            console.log(pic.files[0])
            console.log(form.elements[0].value)

            let xml = new XMLHttpRequest();
            xml.open("POST","/addproducts")
            xml.send(formdata)
            xml.addEventListener("load",function(){
                if(xml.status === 200){
                    console.log(xml.responseText)
                    if(xml.responseText==1){

                        console.log("here")

                        form.elements[0].value=""
                        form.elements[1].value=""
                        form.elements[2].value=""
                        form.elements[3].value=""
                        form.elements[4].value=""
                        form.elements[5].value=null
                        
                        let message = document.getElementById("message");
                        console.log(message)
                        message.innerText = "Product Added Successfullly";
                        message.style.display = "block";
                        message.style.background = "#4CAF50";

                        setTimeout(() => {
                            message.style.color = "#000000";
                            message.style.display = "none"

                        }, 2900)

                    }
                    else if(xml.responseText == "-1"){
                        let message = document.getElementById("message");
                        message.innerText = "Error Occured";
                        message.style.display = "block";
                        message.style.background = "#4CAF50";

                        setTimeout(() => {
                            message.style.color = "#000000";
                            message.style.display = "none"

                        }, 2900)


                    }
                }
            })

            
        })
    </script>
</body>
</html>






