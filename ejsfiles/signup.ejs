            margin: 0;
        }

        .container {
            width: 50%;
            height: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.9); /* Slightly translucent white */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #007bff;
            margin-bottom: 20px;
        }

        input {
            height: 40px;
            width: 100%;
            border: 1px solid #ced4da;
            border-radius: 5px;
            margin-bottom: 15px;
            padding: 10px;
            box-sizing: border-box;
            transition: border-color 0.2s ease-in-out;
        }

        input:focus {
            border-color: #007bff;
